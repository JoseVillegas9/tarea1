@model Microcredito.Models.SolicitudCredito
 
 @{
     ViewData["Title"] = "Solicitud de Crédito";
 }
 
 <h2>Solicitud de Crédito</h2>
 
 <form asp-action="Evaluar" method="post">
     <div class="form-group">
         <label>Nombre:</label>
         <input asp-for="Nombre" class="form-control" />
         <span asp-validation-for="Nombre" class="text-danger"></span>
     </div>
 
     <div class="form-group">
         <label>DNI:</label>
         <input asp-for="DNI" class="form-control" />
         <span asp-validation-for="DNI" class="text-danger"></span>
     </div>
 
     <div class="form-group">
         <label>Fecha de Contratación:</label>
         <input asp-for="FechaContratacion" type="date" class="form-control" />
         <span asp-validation-for="FechaContratacion" class="text-danger"></span>
     </div>
 
     <div class="form-group">
         <label>Salario:</label>
         <input asp-for="Salario" type="number" step="0.01" class="form-control" />
         <span asp-validation-for="Salario" class="text-danger"></span>
     </div>
 
     <div class="form-group">
         <label>Frecuencia de Pago:</label>
         <select asp-for="FrecuenciaPago" class="form-control">
             <option value="">Seleccione...</option>
             <option value="Semanal">Semanal</option>
             <option value="Quincenal">Quincenal</option>
             <option value="Mensual">Mensual</option>
         </select>
         <span asp-validation-for="FrecuenciaPago" class="text-danger"></span>
     </div>
 
     <div class="form-group">
         <label>Monto Solicitado:</label>
         <input asp-for="MontoSolicitado" type="number" step="0.01" class="form-control" />
         <span asp-validation-for="MontoSolicitado" class="text-danger"></span>
     </div>
 
     <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
 </form>
 
 @if (ViewBag.Mensaje != null)
 {
     <div class="alert alert-info mt-3">
         <strong>@ViewBag.Mensaje</strong>
     </div>
 }
 
 @section Scripts {
     <partial name="_ValidationScriptsPartial" />
 }